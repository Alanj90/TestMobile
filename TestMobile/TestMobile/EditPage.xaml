<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMobile.EditPage"
             Title="Editar Usuario">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10" Spacing="10">
                <Entry x:Name="entUsuario" Placeholder="Usuario"/>
                <Entry x:Name="entPassword" Placeholder="Password"/>
                <Entry x:Name="entNombre" Placeholder="Nombre" />
                <StackLayout Orientation="Horizontal">
                    <Label Text="Activo" VerticalOptions="Center"/>
                    <Switch x:Name="swtActivo" VerticalOptions="Center"/>
                </StackLayout>
                <StackLayout>
                    <Button x:Name="btnActualizar" Text="Actualizar" Clicked="BtnActualizar_Clicked" />
                    <Button x:Name="btnEliminar" Text="Eliminar" Clicked="BtnEliminar_Clicked" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>